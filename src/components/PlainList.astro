---
import { Title, Text, Link } from "@components/index"

interface Props {
	title?: string
	items?: string[]
	subtle?: boolean
	class?: string
}

const { title, items, subtle, class: className } = Astro.props
---

<div class:list={["c-plain-list", className]}>
	{title && <Title text={title} Tag="h3" />}

	<ul>
		{
			items.map((item) => (
				<li>
					<Text
						class:list={{ "c-text--subtle": subtle }}
						text={item}
					/>
				</li>
			))
		}
	</ul>
</div>

<style is:global lang="scss">
	@use "@styles/mixins.scss" as *;

	.c-plain-list {
		display: flex;
		flex-direction: column;
		gap: var(--space-16);

		@include styles-for(tablet) {
			gap: var(--space-32);
		}

		& > ul {
			display: flex;
			flex-direction: column;
		}
	}
</style>
