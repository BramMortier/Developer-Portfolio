---
import { Title, TestimonialSlider } from "@components/index"

interface Props {
	title?: string
	cards: any
	class?: string
}

const { class: className, title, cards } = Astro.props
---

<div class:list={["testimonials", className]} id="testimonials">
	{title && <Title text={title} Tag="h1" arrow={true} />}

	<div>
		<TestimonialSlider cards={cards} />
	</div>
</div>

<style is:global lang="scss">
	@use "@styles/mixins.scss" as *;

	.testimonials {
		padding-block: var(--space-64);
		display: flex;
		flex-direction: column;
		gap: var(--space-32);

		@include styles-for(laptop) {
			padding-block: var(--space-160);
			gap: var(--space-64);
		}
	}
</style>
